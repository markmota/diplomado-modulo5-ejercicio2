<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="modulo5.ddam.markmota.tk.space.login.FBLoginActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:id="@+id/activity_nasa_image"
        fresco:actualImageScaleType="fitXY"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP NASA PHOTOS"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_face_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/activity_nasa_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp" />
</RelativeLayout>
