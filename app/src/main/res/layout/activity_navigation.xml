<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:navigation="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/listing_navigation_drawer"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:id="@+id/activity_main_fragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/listing_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        navigation:headerLayout="@layout/activity_menu_head_nav"
        navigation:menu="@menu/item_listing"
        android:layout_gravity="start"
        />


</android.support.v4.widget.DrawerLayout>